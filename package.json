{
  "name": "roi-service-tgbot",
  "version": "1.0.0",
  "description": "A Telegram bot to broadcast Jobs service notifications",
  "main": "src/index.ts",
  "scripts": {
    "test": "nyc mocha --require ts-node/register test/**/*.test.ts",
    "start": "ts-node src/index.ts",
    "lint": "prettier --check . && eslint '{src,test}/**/*.{js,ts,tsx}' --quiet",
    "lint:fix": "prettier --write . && eslint '{src,test}/**/*.{js,ts,tsx}' --quiet --fix",
    "doc": "typedoc --out doc/ src/"
  },
  "keywords": [],
  "author": "TKO-Ã¤ly ry <yllapito@tko-aly.fi>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.1.3",
    "dotenv": "^16.0.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2",
    "node-telegram-bot-api": "^0.60.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/lodash": "^4.14.189",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/node-cron": "^3.0.6",
    "@types/node-telegram-bot-api": "^0.57.6",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "axios-mock-adapter": "^1.21.2",
    "chai": "^4.3.7",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^8.0.2",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.21",
    "typescript": "^4.8.4"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts",
      "coverage/**/*.js",
      "**/*.js",
      "src/index.ts",
      "src/models/*.ts",
      "src/Logger.ts",
      "node_modules"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  }
}
